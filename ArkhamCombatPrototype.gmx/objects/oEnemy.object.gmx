            <string>event_inherited();

/***************
*** MOVEMENT ***
****************/
image_angle = point_direction(x, y, oPlayer.x, oPlayer.y)
maxSpeed = movementSpdModifier * delta_time / 1000000

if (point_distance(x, y, oPlayer.x, oPlayer.y) &gt; followDistMax) {
    direction = image_angle
    moving = true
} else if (point_distance(x, y, oPlayer.x, oPlayer.y) &lt; followDistMin) {
    direction = image_angle - 180
    moving = true
} else {
    moving = false
}

if (moving) {
    speed = clamp(speed + accelAmt, 0, maxSpeed)
} else {
    speed = clamp(speed - accelAmt, 0, maxSpeed)
}

/*************
*** STATES ***
**************/
switch (state) {
case state_AtkQueued:

    followDistMin = 150;
    followDistMax = 100;
    image_blend = c_green;
    if (attackQueueDur &lt;= 0) {
        state = state_AtkActive;
    }
    break;
    
case state_AtkActive:

    image_blend = c_red;
    direction = point_direction(x, y, oPlayer.x, oPlayer.y);
    speed = 2.5 * movementSpdModifier * delta_time / 1000000;
    moving = true;
    
    if (place_meeting(x, y, oPlayer)) {
        state = state_AtkCooldown;
        atkCooldownDur = 3;
        dmgChar(oPlayer, 100);
    }
    
    break;
    
case state_AtkCooldown:

    followDistMin = 200;
    followDistMax = 150;
    image_blend = -1;
    
    if (atkCooldownDur &lt;= 0) {
        state = state_StandBy;
    }
    
    break;
    
case state_StandBy:

    followDistMin = 200;
    followDistMax = 150;
    image_blend = -1;
    if (triggerAtk) {
        attackQueueDur = 2;
        triggerAtk = false;
        state = state_AtkQueued;
    }
    
    break;
    
case state_Stn:

    image_blend = c_yellow;
    speed = 0;
    if (StnDur &lt;= 0) {
        state = state_StandBy;
    }
    break;
    
default:
    break;
}

/*************
*** TIMERS ***
**************/
if (atkCooldownDur &gt; 0) { atkCooldownDur -= (delta_time/1000000); }
if (attackQueueDur &gt; 0) { attackQueueDur -= (delta_time/1000000); }
if (StnDur &gt; 0)         { StnDur -= (delta_time/1000000); }

/************
*** DEATH ***
*************/
if (HP &lt;= 0) {
    instance_destroy();
}


// Collision test
if (place_meeting(x, y, oCharacter)) {
    var charToBumpAwayFrom = instance_place(x, y, oCharacter);
    direction = point_direction(x, y, charToBumpAwayFrom.x, charToBumpAwayFrom.y) + 180;
    speed = bumpSpd;
}
